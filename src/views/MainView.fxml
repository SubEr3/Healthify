<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="src.controllers.MainController"
    styleClass="root">

    <center>
        <!-- Where pages will be swapped in -->
        <StackPane fx:id="contentPane" style="-fx-padding: 20;" />
    </center>

    <bottom>
        <HBox spacing="0" alignment="CENTER"
            style="-fx-background-color: white; -fx-padding: 8 0 8 0; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.09), 7, 0, 0, -2);">
            <Button fx:id="dashboardBtn" text="🏠 Dashboard" styleClass="nav-btn" />
            <Button fx:id="workoutBtn" text="🏋️ Workouts" styleClass="nav-btn" />
            <Button fx:id="mealBtn" text="🍽️ Meals" styleClass="nav-btn" />
            <Button fx:id="weightBtn" text="⚖️ Weight" styleClass="nav-btn" />
            <Button fx:id="calendarBtn" text="📅 Calendar" styleClass="nav-btn" />
        </HBox>
    </bottom>
</BorderPane>